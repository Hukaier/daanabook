{
  "name": "wisdom-book",
  "version": "1.0.0",
  "description": "答案之书 - 基于时间的哲理指导网站",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "wisdom",
    "philosophy",
    "guidance",
    "web"
  ],
  "author": "Wisdom Book Team",
  "license": "MIT"
}
